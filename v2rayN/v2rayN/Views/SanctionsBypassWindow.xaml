<base:WindowBase
    x:Class="v2rayN.Views.SanctionsBypassWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:v2rayN.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveui="http://reactiveui.net"
    xmlns:resx="clr-namespace:ServiceLib.Resx;assembly=ServiceLib"
    xmlns:vms="clr-namespace:ServiceLib.ViewModels;assembly=ServiceLib"
    Title="Iran Sanctions Bypass Settings"
    Width="800"
    Height="600"
    x:TypeArguments="vms:SanctionsBypassViewModel"
    ShowInTaskbar="False"
    Style="{StaticResource WindowGlobal}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    
    <DockPanel Margin="{StaticResource Margin8}">
        <StackPanel
            Margin="{StaticResource Margin4}"
            HorizontalAlignment="Center"
            DockPanel.Dock="Bottom"
            Orientation="Horizontal">
            <Button
                x:Name="btnSave"
                Width="100"
                Content="{x:Static resx:ResUI.TbConfirm}"
                IsDefault="True"
                Style="{StaticResource DefButton}" />
            <Button
                x:Name="btnCancel"
                Width="100"
                Margin="{StaticResource MarginLeftRight8}"
                Content="{x:Static resx:ResUI.TbCancel}"
                IsCancel="true"
                Style="{StaticResource DefButton}" />
        </StackPanel>

        <TabControl HorizontalContentAlignment="Left">
            <TabItem Header="Iran Bypass">
                <ScrollViewer VerticalScrollBarVisibility="Visible">
                    <Grid Margin="{StaticResource Margin8}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Enable/Disable -->
                        <CheckBox
                            x:Name="chkEnableSanctionsDetection"
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="{StaticResource Margin4}"
                            VerticalAlignment="Center"
                            Content="Enable Iranian Sanctions Detection"
                            IsChecked="True" />

                        <CheckBox
                            x:Name="chkEnableIranianDnsAutoSwitch"
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="{StaticResource Margin4}"
                            VerticalAlignment="Center"
                            Content="Enable Automatic Iranian DNS Switching"
                            IsChecked="True" />

                        <CheckBox
                            x:Name="chkEnableTransparentMirroring"
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="{StaticResource Margin4}"
                            VerticalAlignment="Center"
                            Content="Enable Transparent Repository Mirroring"
                            IsChecked="True" />

                        <CheckBox
                            x:Name="chkEnableHardBlockOnFailure"
                            Grid.Row="3"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="{StaticResource Margin4}"
                            VerticalAlignment="Center"
                            Content="Block VPN Connection if Sanctions Bypass Fails"
                            IsChecked="True" />

                        <!-- Preferred DNS Server -->
                        <TextBlock
                            Grid.Row="4"
                            Grid.Column="0"
                            Margin="{StaticResource Margin4}"
                            VerticalAlignment="Center"
                            Text="Preferred Iranian DNS:" />
                        <ComboBox
                            x:Name="cmbPreferredIranianDnsServer"
                            Grid.Row="4"
                            Grid.Column="1"
                            Margin="{StaticResource Margin4}"
                            VerticalAlignment="Center"
                            SelectedValue="electro-primary" />

                        <!-- Check Interval -->
                        <TextBlock
                            Grid.Row="5"
                            Grid.Column="0"
                            Margin="{StaticResource Margin4}"
                            VerticalAlignment="Center"
                            Text="Check Interval (minutes):" />
                        <TextBox
                            x:Name="txtSanctionsCheckInterval"
                            Grid.Row="5"
                            Grid.Column="1"
                            Margin="{StaticResource Margin4}"
                            VerticalAlignment="Center"
                            Text="5" />

                        <!-- DNS Timeout -->
                        <TextBlock
                            Grid.Row="6"
                            Grid.Column="0"
                            Margin="{StaticResource Margin4}"
                            VerticalAlignment="Center"
                            Text="DNS Timeout (seconds):" />
                        <TextBox
                            x:Name="txtDnsTimeout"
                            Grid.Row="6"
                            Grid.Column="1"
                            Margin="{StaticResource Margin4}"
                            VerticalAlignment="Center"
                            Text="10" />

                        <!-- Auto Update -->
                        <CheckBox
                            x:Name="chkAutoUpdateBlockedDomainsList"
                            Grid.Row="7"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="{StaticResource Margin4}"
                            VerticalAlignment="Center"
                            Content="Auto-update Blocked Domains List from GitHub"
                            IsChecked="True" />

                        <!-- Status and Tests -->
                        <GroupBox
                            Grid.Row="8"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Margin="{StaticResource Margin4}"
                            Header="Status and Testing">
                            <StackPanel>
                                <TextBlock x:Name="txtCurrentStatus" 
                                           Text="Status: Ready" 
                                           Margin="{StaticResource Margin4}"
                                           FontWeight="Bold" />
                                
                                <StackPanel Orientation="Horizontal" Margin="{StaticResource Margin4}">
                                    <Button x:Name="btnTestConnection" Content="Test Connection" 
                                            Margin="{StaticResource MarginLeftRight4}" />
                                    <Button x:Name="btnUpdateDomainsList" Content="Update Domains List" 
                                            Margin="{StaticResource MarginLeftRight4}" />
                                    <Button x:Name="btnApplyIranPreset" Content="Apply Iran Preset" 
                                            Margin="{StaticResource MarginLeftRight4}" 
                                            Style="{StaticResource DefButton}" />
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </DockPanel>
</base:WindowBase>