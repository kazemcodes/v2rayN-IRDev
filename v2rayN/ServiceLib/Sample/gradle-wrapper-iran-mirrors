# Gradle Wrapper Properties for Iran Sanctions Bypass
# This file should be placed in the gradle/wrapper/ directory of your Android project

# Use Aliyun Maven mirror for faster downloads
systemProp.http.proxyHost=127.0.0.1
systemProp.http.proxyPort=10809
systemProp.https.proxyHost=127.0.0.1
systemProp.https.proxyPort=10809

# Iranian Maven Mirrors (Primary - Fast and local)
# distributionUrl=https\://maven.myket.ir/gradle/gradle-8.0.2-bin.zip
# distributionUrl=https\://en-mirror.ir/gradle/gradle-8.0.2-bin.zip

# Chinese mirrors (Secondary - Fast international)
# distributionUrl=https\://mirrors.cloud.tencent.com/gradle/gradle-8.0.2-bin.zip
# distributionUrl=https\://mirrors.huaweicloud.com/gradle/gradle-8.0.2-bin.zip

# Original Gradle distribution (Fallback)
distributionUrl=https\://services.gradle.org/distributions/gradle-8.0.2-bin.zip

# Network timeout settings
systemProp.org.gradle.internal.http.connectionTimeout=120000
systemProp.org.gradle.internal.http.socketTimeout=120000

# Enable Gradle daemon for faster builds
org.gradle.daemon=true

# Configure JVM options for better performance
org.gradle.jvmargs=-Xmx2048m -Dfile.encoding=UTF-8

# Enable parallel execution
org.gradle.parallel=true

# Configure build cache
org.gradle.caching=true
